<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guide_img"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/trynow"
        android:layout_marginBottom="@dimen/_100dp"
        android:background="@drawable/shape_corners_5_tran"
        android:padding="@dimen/_20dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_50dp"
        android:layout_marginRight="@dimen/_50dp"
        android:text="@string/guid_try_now"
        android:visibility="visible"
        />

</RelativeLayout>
