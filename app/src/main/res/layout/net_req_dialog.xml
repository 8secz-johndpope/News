<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dialog_bg">

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_20dp">


        <ImageView
            android:id="@+id/waiting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/net_data_loading"/>

        <TextView
            android:id="@+id/notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/loading_text_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/_15dp"
            android:paddingTop="@dimen/_10dp"
            android:paddingRight="@dimen/_15dp"
            android:paddingBottom="@dimen/_15dp"
            android:text="@string/loading_ad"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dismissBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_3dp"
        android:src="@mipmap/loading_cancel"
        android:visibility="gone"/>

</RelativeLayout>