<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.heaven.base.ui.view.widget.banner.LoopRecyclerViewPager
                android:id="@+id/image_viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170dp"
                app:rvp_inertia="true"
                app:rvp_singlePageFling="false"
                app:rvp_triggerOffset="0.1"
                />

            <com.heaven.news.ui.adapter.ViewPagerIndicator
                android:id="@+id/indicators"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                app:vpi_default_color="@color/white"
                app:vpi_distance="14dp"
                app:vpi_distanceType="BY_DISTANCE"
                app:vpi_indicatorType="CIRCLE_LINE"
                app:vpi_length="14dp"
                app:vpi_radius="3dp"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>