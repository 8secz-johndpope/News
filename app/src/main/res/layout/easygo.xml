<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.heaven.news.ui.vm.vmmodel.MainViewModel" />

        <variable
            name="search"
            type="com.heaven.news.ui.vm.vmmodel.MainViewModel.EasyGoSearch" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.heaven.base.ui.view.widget.banner.XBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170dp"
                app:AutoPlayTime="3000"
                app:isAutoPlay="true"
                app:isShowIndicatorOnlyOne="true"
                app:pageChangeDuration="800"
                app:pointNormal="@drawable/shape_noraml"
                app:pointSelect="@drawable/shape_selected"
                app:pointsContainerBackground="@color/transparent"
                app:pointsPosition="CENTER"
                app:tipTextSize="12sp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_10dp"
                >

                <TextView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{() -> viewModel.easyGoSearch()}"
                    android:background="@drawable/round5_red_bg"
                    android:padding="@dimen/_10dp"
                    android:text="@string/search_service"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_toLeftOf="@+id/search"
                    android:background="@drawable/round5_f9f9f9_bg"
                    >

                    <com.heaven.news.ui.view.ClearEditText
                        android:id="@+id/search_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@={search.searchKey}"
                        android:drawableLeft="@mipmap/icon_search"
                        android:background="@null"
                        android:hint="@string/easy_go_search_hint"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:padding="@dimen/_4dp"
                        android:textSize="@dimen/_14sp"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/driver_line_e4e4e4"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>