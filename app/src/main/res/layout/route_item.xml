<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/route_index_title"
            android:textColor="@color/color_3838"
            android:textSize="@dimen/_17sp"
            android:text="行程1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_28dp"
            android:orientation="horizontal"
            android:id="@+id/route_time_area"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_city"
                android:textColor="@color/color_3838"
                android:textSize="@dimen/_14sp"
                android:gravity="center_vertical"
                android:text="深圳"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginRight="@dimen/_4dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrow_point"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/end_city"
                android:textColor="@color/color_3838"
                android:textSize="@dimen/_14sp"
                android:gravity="center_vertical"
                android:text="北京"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:id="@+id/route_date"
                android:textColor="@color/color_3838"
                android:textSize="@dimen/_10sp"
                android:gravity="center_vertical"
                android:text="2019-09-09"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/route_week"
                android:textColor="@color/color_3838"
                android:textSize="@dimen/_14sp"
                android:gravity="center_vertical"
                android:text="星期四"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_28dp"
            android:id="@+id/route_info_area"
            android:orientation="vertical"
            android:padding="@dimen/_15dp"
            android:background="@drawable/shape_corners_10_wite"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/route_flight_no"
                android:textColor="@color/color_3838"
                android:textSize="@dimen/_14sp"
                android:drawableLeft="@mipmap/logo_zh"
                android:drawablePadding="@dimen/_6dp"
                android:text="ZH2391"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/start_info_area"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:id="@+id/route_start_local"
                        android:textColor="@color/color_3838"
                        android:textSize="@dimen/_10sp"
                        android:text="当地"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:id="@+id/route_start_time"
                        android:textColor="@color/color_3838"
                        android:textSize="@dimen/_26sp"
                        android:text="14:00"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:id="@+id/route_start_airport"
                        android:textColor="@color/color_3838"
                        android:textSize="@dimen/_14sp"
                        android:text="安保机场T3"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_info_area"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/route_end_local"
                        android:textColor="@color/color_3838"
                        android:textSize="@dimen/_10sp"
                        android:text="当地"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/route_end_time"
                        android:textColor="@color/color_3838"
                        android:textSize="@dimen/_26sp"
                        android:text="14:00"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/route_end_airport"
                        android:textColor="@color/color_3838"
                        android:textSize="@dimen/_14sp"
                        android:text="安保机场T3"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/start_info_area"
                    android:layout_toLeftOf="@+id/end_info_area"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/route_flight_duration"
                        android:drawableBottom="@mipmap/arrow_route"
                        android:textColor="@color/color_3838"
                        android:textSize="@dimen/_12sp"
                        android:text="安保机场T3"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
