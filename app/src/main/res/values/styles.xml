<resources>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPaddingBottom">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorWhite</item>
        <item name="tabSelectedTextColor">@color/tab_bottom_color</item>
    </style>

    <declare-styleable name="PageGridView">
        <!--行数，如果为0表示横向显示gridview-->
        <attr name="PagingRows" format="integer" />
        <!--列数,如果为0表示纵向显示gridview-->
        <attr name="PagingColums" format="integer" />
        <attr name="PagingDiver" format="reference" />
    </declare-styleable>
</resources>
